events {
    worker_connections 1024;
}

# TCP proxy for NATS
stream {
    upstream nats_backend {
        server constellation-overwatch:4222;
    }

    server {
        listen 4222;
        proxy_pass nats_backend;
        proxy_connect_timeout 10s;
        proxy_timeout 300s;
    }
}

http {
    upstream constellation_backend {
        server constellation-overwatch:8080;
    }

    upstream nats_monitoring {
        server constellation-overwatch:8222;
    }

    # Rate limiting
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=general:10m rate=20r/s;

    # Security headers
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy strict-origin-when-cross-origin always;

{% if constellation_domain and constellation_domain != "" %}
    # HTTP server - ACME challenges and initial access
    server {
        listen 80;
        server_name {{ constellation_domain }};
        
        # ACME challenge for Let's Encrypt
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        
        # Redirect to HTTPS if certificates exist, otherwise serve over HTTP
        location / {
            # For now, serve over HTTP until certificates are ready
            limit_req zone=general burst=20 nodelay;
            proxy_pass http://constellation_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # WebSocket support for all routes
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }

