{% else %}
    # HTTP only server (no domain)
    server {
        listen 80;
        server_name _;

        # Main application - proxy everything to constellation
        location / {
            limit_req zone=general burst=20 nodelay;
            proxy_pass http://constellation_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

            # WebSocket support for all routes
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }
{% endif %}

    # NATS Monitoring HTTP server (port 8222)
    server {
        listen 8222;
        server_name _;

        location / {
            proxy_pass http://nats_monitoring;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

            # WebSocket support
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }
